<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"


    >

    <TextView android:text="@string/administrator" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/mybackground2"
        >


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User ID"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:id="@+id/Userlabel"
            android:layout_marginTop="75dp"
            android:layout_gravity="center_horizontal" />


        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/username"
            android:layout_above="@+id/Userlabel"
            android:textCursorDrawable="@null"
            android:background="@drawable/experiment3"
            android:layout_gravity="center_horizontal" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_above="@+id/username"
            android:id="@+id/Passwordlabel"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/experiment3"
            android:padding="15dp"
            android:ems="10"
            android:id="@+id/password"
            android:textCursorDrawable="@null"
            android:layout_above="@+id/Passwordlabel"
            android:layout_gravity="center_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18sp"
            android:id="@+id/login"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="40dp"
            android:layout_above="@+id/Passwordlabel"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/experiment2"
            android:autoText="false"
            android:cursorVisible="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="Create/Replace Account"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/register"
            android:textSize="18sp"

            android:layout_marginTop="10dp"
            android:layout_above="@+id/register"
            android:background="@drawable/experiment2"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>