<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/ll"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"


    >

    <TextView android:text="@string/thesisdatabase" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="-32dp"
        android:layout_marginRight="3dp"
       android:src="@drawable/mysearchicon"
        android:layout_gravity="right" />

    <ExpandableListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView"
        android:textFilterEnabled="false" />


</LinearLayout>
